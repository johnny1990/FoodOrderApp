<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FoodOrderApp.Views.AllOrdersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FoodOrderApp.ViewModels"
    Title="AllOrdersPage">
    <ContentPage.BindingContext>
        <vm:AllOrdersViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="All Orders" />

            <CollectionView ItemsSource="{Binding Orders}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Padding="10"
                            Stroke="LightGray"
                            StrokeThickness="1">
                            <VerticalStackLayout>
                                <Label FontAttributes="Bold" Text="{Binding Id}" />
                                <Label Text="{Binding TableNumber, StringFormat='Table: {0}'}" />
                                <Label Text="{Binding ClientNumber, StringFormat='Customers: {0}'}" />
                                <Label Text="{Binding Total, StringFormat='Total: {0:C}'}" />
                                <Label FontSize="12" Text="{Binding CreatedAt, StringFormat='Created: {0:dd MMM yyyy HH:mm}'}" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>