<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FoodOrderApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Padding="20">
        <Label
            Margin="0,0,0,20"
            FontSize="24"
            HorizontalOptions="Center"
            Text="Welcome to FoodOrderApp" />
        <Button Clicked="OnViewOrdersClicked" Text="📋 View All Orders" />

        <Button Clicked="OnTableSelectionClicked" Text="1. Go to Table Selection" />

        <Button Clicked="OnClientNumberClicked" Text="2. Go to Client Number" />

        <Button Clicked="OnProductSelectionClicked" Text="3. Go to Product Selection" />


    </VerticalStackLayout>

</ContentPage>


